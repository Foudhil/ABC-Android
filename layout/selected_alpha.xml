<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedAlpha"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/bgDrawImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/wa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.mellakhi.foudhil.abc.PaintView
            android:id="@+id/paintView"
            android:layout_width="224dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="103dp" />

        <ImageView
            android:id="@+id/abcBtn"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/abc_home" />

        <ImageView
            android:id="@+id/gommeBtn"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="67dp"
            app:srcCompat="@drawable/gomme" />

        <Button
            android:id="@+id/blackBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="331dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/button_black" />

        <Button
            android:id="@+id/redBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/blackBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="313dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/button_red" />

        <Button
            android:id="@+id/orangeBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/redBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="325dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_orange" />

        <Button
            android:id="@+id/yellowBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/orangeBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="322dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/button_yellow" />

        <Button
            android:id="@+id/greenBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/yellowBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="324dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_green" />

        <Button
            android:id="@+id/skyBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/greenBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="302dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/button_sky" />

        <Button
            android:id="@+id/blueBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/skyBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="301dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_blue" />

        <Button
            android:id="@+id/purpleBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/blueBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="266dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/button_purple" />

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="33dp"
            app:srcCompat="@drawable/arrow_next" />

        <ImageView
            android:id="@+id/prevBtn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="33dp"
            android:layout_toStartOf="@+id/nextBtn"
            app:srcCompat="@drawable/arrow_previous" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>